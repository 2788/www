<div role="tabpanel" class="tab-pane<%= type == 'tech-position' ? ' active' : '' %>" id="<%= type %>">
  <% if positions.length == 0 %>
    <div class="info-null">该岗位暂没有招聘信息</div>
  <% else %>
    <div class="table-responsive">
      <table class="table">
        <% positions.each do |position| %>
          <tr>
            <td>
              <%= link_to position[:title], position_path(id: position.id), target: "_blank", class: "title postion-title" %>
            </td>
            <td>
              <span class="space">
                地点：
                <% position.location.each do |city| %>
                  <span><%= city -%></span>
                  <span><%= city === position.location.last ? '' : '/' %></span>
                <% end %>
              </span>
            </td>
            <%# 岗位发布日期修改为当天日期，每天刷新 %>
            <%# https://jira.qiniu.io/browse/BO-8288 %>
            <td><time><%= Time.now.strftime("%Y-%m-%d") -%></time></td>
            <% if false -%>
            <td><time><%= position[:created_at].strftime("%Y-%m-%d") %></time></td>
            <% end -%>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</div>