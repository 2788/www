<%# banner 部分 %>
<div class="jumbotron hero hero-svesdk">
  <div class="container">
    <div class="middle-container">
      <div class="row">
        <div class="col-sm-8 col-xs-12">
          <h1><%= raw(I18n.t("views.products.svesdk.banner.title")) -%></h1>
          <p><%= raw(I18n.t("views.products.svesdk.banner.desc")) -%></p>
          <div class="actions">
            <%= link_to "立即咨询", "https://jinshuju.net/f/gmoDJI", title: "短视频特效 SDK - 立即咨询", target: "_blank", class: "btn btn-lg btn-default m-r m-b-xs" -%>
          </div>
          <p><%= link_to raw("&#9658;&nbsp;Demo&nbsp;下载"), "", title: "短视频特效 SDK - Demo 下载", class: "link demo-download" -%></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%# 导航 %>
<div class="features-nav svesdk-nav hidden-xs">
  <div class="container">
    <div class="tabs">
      <ul class="nav nav-tabs nav-justified navbar-wrapper-middle">
        <% I18n.t("views.products.svesdk.middlebar").each do |linkbar| -%>
          <li class="<%= linkbar[:class] %>"><%= link_to linkbar[:title], linkbar[:href] -%></li>
        <% end -%>
      </ul>
    </div>
  </div>
</div>

<%# 核心优势 %>
<div class="features features-less feature-svesdk-advantage tab-content-section-1">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.svesdk.advantage.title") -%></h2>
    </div>

    <div class="row">
      <% I18n.t("views.products.svesdk.advantage.cols").each do |col| -%>
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="thumbnail">
            <%= image_tag col[:icon], class: "media-object", alt: col[:title], title: col[:title], width: 100 -%>
            <div class="caption">
              <h4><%= col[:title] -%></h4>
              <ul>
                <% col[:list].each do |item| -%>
                <li><p><i class="glyphicon glyphicon-ok"></i><%= item -%></p></li>
                <% end -%>
              </ul>
            </div>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<%# 产品功能 %>
<div class="features features-less features-svesdk-func tab-content-section-2">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.svesdk.func.title") -%></h2>
    </div>
    <div class="tabs">
      <div class="row">
        <div class="col-md-2 col-sm-12 col-xs-12 col-tab-nav">
          <ul class="nav nav-tabs nav-justified points-bar nav-short" role="tablist">
            <% I18n.t("views.products.svesdk.func.leftbar").each do |linkbar| -%>
              <li class="<%= linkbar[:class] -%>"><%= link_to linkbar[:title], linkbar[:href], data: {toggle: "tab"} -%></li>
            <% end -%>
          </ul>
        </div>
        <div class="col-md-10 col-sm-12 col-xs-12 col-tab-content">
          <div class="tab-content">
            <% I18n.t("views.products.svesdk.func.sections").each do |unit| -%>
              <section id="<%= unit[:id] %>" class="<%= unit[:class] -%>">
                <h4><%= unit[:title] -%></h4>
                <% unit[:list].each do |item| -%>
                <h5><%= item[:title] -%></h5>
                <p><%= item[:desc] -%></p>
                <% end -%>
              </section>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

