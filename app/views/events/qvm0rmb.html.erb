          <div class="col-md-2 col-sm-2 col-xs-4 gradual-bg-qvm1rmb col-model">
            <%= image_tag "qvmevent/model-gongxiangtongyong-qiye.png", alt: "共享通用", width: "100%" -%>
            <%= link_to "立即抢购", "https://portal.qiniu.com/qvm/vm/instance/create?region=cn-qingdao&activity=enterprisefree&instance_type=ecs.mn4.small", target: "_blank", class: "btn" -%>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-4 gradual-bg-qvm1rmb col-model">
            <%= image_tag "qvmevent/model-jisuanji-qiye.png", alt: "计算机", width: "100%" -%>
            <%= link_to "立即抢购", "https://portal.qiniu.com/qvm/vm/instance/create?region=cn-qingdao&activity=enterprisefree&instance_type=ecs.c5.large", target: "_blank", class: "btn" -%>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-4 gradual-bg-qvm1rmb col-model">
            <%= image_tag "qvmevent/model-tufaxingneng-qiye-1.png", alt: "突发性能实例-1", width: "100%" -%>
            <%= link_to "立即抢购", "https://portal.qiniu.com/qvm/vm/instance/create?region=cn-qingdao&activity=enterprisefree&instance_type=ecs.t5-lc1m4.large", target: "_blank", class: "btn" -%>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-4 gradual-bg-qvm1rmb col-model">
            <%= image_tag "qvmevent/model-tufaxingneng-qiye-2.png", alt: "突发性能实例-2", width: "100%" -%>
            <%= link_to "立即抢购", "https://portal.qiniu.com/qvm/vm/instance/create?region=cn-qingdao&activity=enterprisefree&instance_type=ecs.t5-c1m1.xlarge", target: "_blank", class: "btn" -%>
