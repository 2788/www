        <div class="row">
          <div class="col-md-2 col-sm-2 col-xs-4 gradual-bg-qvm1rmb col-model">
            <%= image_tag "qvmevent/model-gongxiangjisuan-qiye-1.png", alt: "共享计算-1", width: "100%" -%>
