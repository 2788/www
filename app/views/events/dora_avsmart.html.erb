            <div class="main">
              <%= video_tag "http://ptzw4y4vx.bkt.clouddn.com/%E8%BF%90%E5%8A%A8.mp4", loop: true, muted: true, autoplay: true, controls: true, autobuffer: true, width: "100%" -%>
