<div class="jumbotron hero hero-kodo">
  <div class="container">
    <div class="middle-container">
      <div class="row">
        <div class="col-xs-12 col-sm-8">
          <h2><%= I18n.t("views.products.kodo.banner.title") %></h2>
          <p><%= I18n.t("views.products.kodo.banner.desc") %></p>
          <div class="actions <%= I18n.t("views.language") != 'zh' ? 'd-none' : '' %>">
            <%= link_to "立即使用", signup_url(), target: "_blank", class: "btn btn-lg btn-default m-r m-b-xs kodo-banner-btn" -%>
            <%= link_to "产品价格", prices_path + "?source=kodo", target: "_blank", class: "btn btn-lg btn-hollow m-b-xs" -%>
            <h5 class="kodo-modal">体验边缘存储服务，请 <%= link_to "点击咨询", "http://qiniu-exp.mikecrm.com/yGntQCJ", target: "_blank", class: "out_link underline" -%></h5>
            <% if false -%>
            <h5 class="kodo-modal margin-l-negative">【对象存储 SLA 更新】七牛云发布新版对象存储服务等级协议（SLA）<%= link_to "点击查阅", "/sla-kodo-new", target: "_blank", class: "out_link underline" -%></h5>
            <% end -%>
            <h5 class="kodo-modal m-t-none">标准存储，低至 <span class="text-warn">0.099</span> 元/GB/月起。<%= link_to "了解详情", "/prices?source=kodo", title: "标准存储，低至 0.099 元/GB/月起 - 了解详情", target: "_blank", class: "out_link underline" -%></h5>
          </div>
        </div>
        <div class="col-xs-4 hidden-xs">
          <div class="right-mask-banner">
            <%= image_tag "banner/banner-kodo-right-zh.png", alt: "kodo", width: '100%' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="features-nav kodo-nav hidden-xs">
  <div class="container">
    <div class="tabs">
      <ul class="nav nav-tabs nav-justified navbar-wrapper-middle">
        <% I18n.t("views.products.kodo.middlebar.links").each do |linkbar| %>
          <li class="<%= linkbar[:class] %>"><%= link_to linkbar[:title], linkbar[:href], class:linkbar[:class] -%></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="features features-superiority tab-content-section-1">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.kodo.feature1.title") %></h2>
    </div>

    <div class="row">
      <% I18n.t("views.products.kodo.feature1.col").each do |col| %>
        <div class="col-sm-6 <%= I18n.t("views.language") !='zh' ? 'col-xs-12 kodo-feature-col' : 'col-xs-6' -%>">
          <div class="media">
            <div class="media-left">
              <%= image_tag col[:icon], class: "media-object", alt: col[:title], width: 110 %></a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= col[:title] -%></h4>
              <p><%= col[:desc] -%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="features features-solution feature-core tab-content-section-2">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.kodo.feature2.title") %></h2>
    </div>

    <div class="row">
      <% I18n.t("views.products.kodo.feature2.col").each do |col| %>
        <div class="col-md-4 col-sm-6 col-xs-6">
          <div class="thumbnail">
            <%= image_tag col[:icon], class: "media-object", alt: col[:title], width: 60 %>
            <div class="caption">
              <h4><%= col[:title] %></h4>
              <% if col[:link] != "" -%>
                <p><%= col[:desc] %><%= link_to col[:more], col[:link], target: "_blank", class: "more" -%></p>
              <% else -%>
                <p><%= col[:desc] %></p>
              <% end -%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="features features-kodo features-scene tab-content-section-3">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.kodo.feature3.title") %></h2>
    </div>

    <div class="tabs">
      <ul class="nav nav-tabs nav-justified points-bar nav-short" role="tablist">
        <% I18n.t("views.products.kodo.feature3.middlebar").each do |col| %>
          <li class="<%= col[:class] %>"><%= link_to col[:name], col[:href], data:{ toggle: "tab" } -%></li>
        <% end %>
      </ul>
      <div class="tab-content bottom-line">
        <% I18n.t("views.products.kodo.feature3.sections").each do |sec| %>
          <section class="<%= sec[:class] %>" id="<%= sec[:id] -%>">
            <div class="media">
              <%= content_tag :div, image_tag(sec[:icon], alt: sec[:title], class: "media-object img-left"), class: "media-left" %>
              <div class="media-body">
                <% if sec[:type] == "solution" -%>
                  <p><%= sec[:desc] -%><%= link_to "了解更多", solutions_path(anchor: sec[:link]), target: "_blank", class: "more" -%></p>
                <% elsif sec[:type] == "link" -%>
                  <p><%= sec[:desc] -%><%= link_to "了解更多", sec[:link], target: "_blank", class: "more" -%></p>
                <% elsif sec[:type] == "none" -%>
                  <p><%= sec[:desc] -%></p>
                <% end -%>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</div>


