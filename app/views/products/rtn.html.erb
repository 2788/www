      </ul>
      <div class="btn-box">
        <% I18n.t("views.products.rtn.demo.btns").each do |btn| %>
          <%= link_to btn[:name], btn[:link], target: "_blank", class:"btn btn-primary" -%>
        <% end %>
      </div>
    </div>
  </div>
</div>

