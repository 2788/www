                  <% I18n.t("views.products.qavs.service.table.tableleft.row1").each do |col| -%>
                    <% if col[:class].include?"icon-link" -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height], onclick: "window.open('" + col[:link] + "', '" + col[:target] + "');" -%>
                    <% else -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height] -%>
                    <% end -%>
                  <% end -%>
                </div>
              </div>

              <div class="row service-row">
                <% I18n.t("views.products.qavs.service.table.tableleft.row2").each do |col| -%>
                  <div class="col-md-4 col-sm-4 col-xs-4 col-4 service-col content-border <%= col[:colclass] -%>">
                    <% if col[:class].include?"icon-link" -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height], onclick: "window.open('" + col[:link] + "', '" + col[:target] + "');" -%>
