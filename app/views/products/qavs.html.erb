                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height] -%>
                    <% end -%>
                  </div>
                <% end -%>
              </div>

              <div class="row service-row">
                <% I18n.t("views.products.qavs.service.table.tableleft.row3").each do |col| -%>
                  <div class="col-md-6 col-sm-6 col-xs-6 col-6 service-col content-border <%= col[:colclass] -%>">
                    <% if col[:class].include?"icon-link" -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height], onclick: "window.open('" + col[:link] + "', '" + col[:target] + "');" -%>
                    <% else -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height] -%>
                    <% end -%>
                  </div>
                <% end -%>
              </div>

              <div class="row service-row">
                <% I18n.t("views.products.qavs.service.table.tableleft.row4").each do |col| -%>
                  <div class="col-md-3 col-sm-3 col-xs-3 col-3 service-col content-border <%= col[:colclass] -%>">
                    <% if col[:class].include?"icon-link" -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height], onclick: "window.open('" + col[:link] + "', '" + col[:target] + "');" -%>
                    <% else -%>
                      <%= image_tag col[:img], class: col[:class], alt: col[:alt], height: col[:height] -%>
                    <% end -%>
                  </div>
                <% end -%>
              </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4">
              <div class="row service-row content-border">
                <% I18n.t("views.products.qavs.service.table.tableright").each do |row| -%>
                  <div class="col-md-12 col-sm-12 col-xs-12 service-col <%= row[:rowclass] -%>">
                    <% if row[:class].include?"icon-link" -%>
                      <%= image_tag row[:img], class: row[:class], alt: row[:alt], height: row[:height], onclick: "window.open('" + row[:link] + "', '" + row[:target] + "');" -%>
                    <% else -%>
                      <%= image_tag row[:img], class: row[:class], alt: row[:alt], height: row[:height] -%>
                    <% end -%>
                  </div>
                <% end -%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
