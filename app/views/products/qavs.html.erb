<%# service tab %>
<div class="features features-qavs-service">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.products.qavs.service.title") -%></h2>
    </div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12 table-container">
        <div class="service-table">
          <%# title %>
          <div class="row service-row">
            <div class="col-md-12 col-sm-12 col-xs-12 service-col content-light">
              <%= image_tag I18n.t("views.products.qavs.service.table.titleimg"), alt: I18n.t("views.products.qavs.service.table.titlealt"), height: I18n.t("views.products.qavs.service.table.titleh") -%>
