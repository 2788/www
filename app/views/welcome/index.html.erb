<div class="features features-hotnews <%= I18n.t("views.language") != 'zh' ? 'd-none' : '' %>">
  <div class="container">
    <div class="intro">
      <h2 class="title">热门动态</h2>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <ul class="list">
          <li class="hot hotnews-title"><%= link_to "新闻动态", news_path -%></li>
          <li class="hotnews-title"><%= link_to "产品动态", product_news_path -%></li>
          <li class="hotnews-title"><%= link_to "近期福利", welfares_path -%></li>
          <li><%= link_to raw("更多内容 &gt;"), news_path, class: "more" -%></li>
        </ul>
      </div>

      <div class="col-sm-9">
        <div class="row">
          <% @top_archives.each do |archive| %>
            <div class="col-sm-6 col-md-4">
              <div class="hotnews-box">
                <%= link_to "#{ Rails.application.config.blog_host }/archives/#{ archive.id }", target: "_blank" do -%>
                  <div class="hot-im-wrapper"><%= image_tag archive.cover, class: "", alt: "图片加载中" %></div>
                  <div class="infobox">
                    <time><%= archive[:created_at].strftime("%Y-%m-%d") + raw(" 发布在 ") + Archive::CATEGORIES[archive.category] %></time>
                    <p title="<%= archive[:title] %>"><%= archive[:title] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


