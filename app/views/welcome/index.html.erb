<% if I18n.t("views.language") == 'zh' %>
  <div class="banners-slider">
    <% @index_banners.each do |banner| %>
      <%= render inline: banner.content_zh %>
    <% end %>
  </div>
<% else %>
  <%= render inline: @index_banners.first.content_en %>
<% end %>

<div class="features">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.index.feature1.title") %></h2>
    </div>

    <div class="row">
      <% I18n.t("views.welcome.index.feature1.col").each do |unit| %>
        <div class="col-sm-6">
          <div class="media">
            <div class="media-left">
              <%= image_tag unit[:icon], class: "media-object", alt: unit[:title] %>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= unit[:title] %></h4>
              <p class="<%= I18n.t("views.language") == 'en' ? 'en' : '' %>"><%= unit[:desc] %></p>
              <p>
                <% unit[:icons].each do |icon| %>
                  <%= link_to icon[:name], icon[:path], class: icon[:class] -%>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


