    <div class="intro">
      <h2 class="title">核心功能</h2>
    </div>

    <div class="tabs">
      <ul class="nav nav-tabs nav-justified points-bar nav-short" role="tablist">
        <li class="active"><a href="#collections" data-toggle="tab">采集处理</a></li>
        <li><a href="#editions" data-toggle="tab">编辑上传</a></li>
        <li><a href="#services" data-toggle="tab">服务端功能</a></li>
      </ul>
      <div class="tab-content">
        <% I18n.t("plsvs1").each do |plsv| %>
          <% groupid = plsv[:groupid] %>
          <section id= <%= groupid %> class="tab-pane fade in active">
            <div class="row row-clear">
              <% plsv[:group].each do |logo| %>
                <div class="col-sm-2 col-clear col-5">
                  <div class="thumbnail thumbnail-icons">
                    <%= image_tag logo[:imgpath], alt: "服务", width: 40 %>
                    <div class="desc">
                      <h5><%= logo[:desc] %></h5>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </section>
        <% end %>
        <% I18n.t("plsvs").each do |plsv| %>
          <% groupid = plsv[:groupid] %>
          <section id= <%= groupid %> class="tab-pane fade in">
            <div class="row row-clear">
              <% plsv[:group].each do |logo| %>
                <div class="col-sm-2 col-clear col-5">
                  <div class="thumbnail thumbnail-icons">
                    <%= image_tag logo[:imgpath], alt: "服务", width: 40 %>
                    <div class="desc">
                      <h5><%= logo[:desc] %></h5>
                    </div>
