<div class="jumbotron hero hero-censor">
  <div class="container">
    <div class="middle-container">
      <div class="row">
        <div class="col-xs-10 col-sm-7">
          <h1><%= I18n.t("views.welcome.censor.title") -%></h1>
          <h3><%= I18n.t("views.welcome.censor.subtitle") -%></h3>
          <div class="actions <%= I18n.t("views.language") != "zh" ? "d-none" : "" -%>">
