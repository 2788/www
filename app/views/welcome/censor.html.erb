          <p><%= I18n.t("views.welcome.censor.describe") -%></p>
        </div>
        <div class="col-xs-5 hidden-xs">
          <div class="right-mask-banner">
            <%= image_tag "banner/banner-censor-right-zh.png", alt: "censor-right", width: "100%" -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%# process tab %>
<div class="features features-censor-pro">
