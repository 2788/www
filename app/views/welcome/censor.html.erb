<%# advantage tab %>
<div class="features features-censor-adva">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.censor.advantage.title") -%></h2>
    </div>
    <div class="row">
      <% I18n.t("views.welcome.censor.advantage.cols").each do |col| -%>
        <div class="col-md-4 col-sm-6 col-xs-6">
          <div class="thumbnail">
            <%= image_tag col[:image], class: "media-object", alt: col[:title], width: "40%" -%>
            <div class="caption">
              <h4><%= col[:title] -%></h4>
              <p><%= col[:describe] -%></p>
            </div>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<%# scene tab %>
<div class="features features-less features-cases features-censor-scene">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.censor.scene.title") -%></h2>
    </div>
    <div class="tabs">
      <ul class="nav nav-tabs nav-justified points-bar nav-short" role="tablist">
        <% I18n.t("views.welcome.censor.scene.tabs").each do |tab| -%>
          <li class="<%= tab[:class] -%>"><%= link_to tab[:name], tab[:href], data:{ toggle: "tab" } -%></li>
        <% end -%>
      </ul>
      <div class="tab-content tab-censor">
        <% I18n.t("views.welcome.censor.scene.sections").each do |sec| -%>
          <section class="<%= sec[:class] -%>" id="<%= sec[:id] -%>">
            <p><%= sec[:describe] -%></p>
          </section>
        <% end -%>
      </div>
      <div class="row client-row">
        <div class="col-md-2 col-sm-3 col-xs-12">
          <h2 class="title"><%= I18n.t("views.welcome.censor.scene.client.title") %></h2>
        </div>
        <div class="col-md-10 col-sm-9 col-xs-12">
          <div id="cases-slider" class="conveyor slick-slider draggable">
            <% I18n.t("views.welcome.censor.scene.client.cols").each do |col| -%>
              <div><%= image_tag col[:image], class: "case", alt: col[:title], title: col[:title] -%></div>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

