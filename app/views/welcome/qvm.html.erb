                    <tr class="font-huge">
                      <td><%= sec[:row3][:col1] -%></td>
                      <td><%= sec[:row3][:col2] -%></td>
                      <td><%= sec[:row3][:col3] -%><span class="font-normal"> GHz</span></td>
                      <td><%= sec[:row3][:col4] -%><span class="font-normal"> Gbps</span></td>
                      <td><%= sec[:row3][:col5] -%><span class="font-normal">万 PPS</span></td>
                    </tr>

                    <tr>
                      <td><%= sec[:row4][:col1] -%></td>
                      <td><%= sec[:row4][:col2] -%></td>
                      <td><%= sec[:row4][:col3] -%></td>
                      <td><%= sec[:row4][:col4] -%></td>
                      <td><%= sec[:row4][:col5] -%></td>
                    </tr>
                  </tbody>
                </table>
              </section>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
