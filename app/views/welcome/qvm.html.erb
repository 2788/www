  <div class="container">
    <div class="row product-row">
      <div class="col-md-3 col-sm-3 hidden-xs col-image-lg">
        <%= image_tag I18n.t("views.welcome.qvm.product.host.image"), alt: I18n.t("views.welcome.qvm.product.host.title"), width: "100%" -%>
      </div>
      <div class="col-md-9 col-sm-9 col-xs-12 col-content-lg">
