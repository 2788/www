<%# 其余六个 %>
<% I18n.t("views.welcome.qvm.product.others").each do |item| -%>
  <div class="features features-less features-cases features-qvm-product qvm-product-item <%= item[:class] -%>">
    <div class="container">
      <div class="row product-row">

        <% if item[:type] == "right" -%>

          <div class="col-md-10 col-sm-10 col-xs-12 col-content">
            <h4><%= item[:title] -%></h4>
            <p><%= item[:desc] -%></p>
            <span class="item-labels"><%= item[:labels] -%></span>
            <span class="more-btn">
              <% if item[:link] != "" -%>
                <%= link_to "了解更多", item[:link], target: "_blank" -%>&nbsp;
                <%= image_tag "qvm/know-more.png", alt: "了解更多", width: 24 -%>
              <% else -%>
                即将上线
              <% end -%>
            </span>
          </div>
          <div class="col-md-2 col-sm-2 hidden-xs col-image">
            <%= image_tag item[:image], alt: item[:title], width: "100%" -%>
          </div>

        <% elsif item[:type] == "left" -%>

          <div class="col-md-2 col-sm-2 hidden-xs col-image">
            <%= image_tag item[:image], alt: item[:title], width: "100%" -%>
          </div>
          <div class="col-md-10 col-sm-10 col-xs-12 col-content">
            <h4><%= item[:title] -%></h4>
            <p><%= item[:desc] -%></p>
            <span class="item-labels"><%= item[:labels] -%></span>
            <span class="more-btn">
              <% if item[:link] != "" -%>
                <%= link_to "了解更多", item[:link], target: "_blank" -%>&nbsp;
                <%= image_tag "qvm/know-more.png", alt: "了解更多", width: 24 -%>
              <% else -%>
                即将上线
              <% end -%>
            </span>
          </div>
          
        <% end -%>

      </div>
    </div>
  </div>
<% end -%>

<%# scene tab %>
<div class="features features-qvm-scene">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.qvm.scene.title") -%></h2>
    </div>
    <div class="tabs">
      <ul class="nav nav-tabs nav-justified points-bar" role="tablist">
        <% I18n.t("views.welcome.qvm.scene.tabs").each do |tab| -%>
          <li class="<%= tab[:class] -%>"><%= link_to tab[:name], tab[:href], data:{ toggle: "tab" } -%></li>
        <% end -%>
      </ul>
      <div class="tab-content">
        <% I18n.t("views.welcome.qvm.scene.sections").each do |sec| -%>
          <section class="<%= sec[:class] -%>" id="<%= sec[:id] -%>">
            <div class="row">
              <div class="col-md-8 col-sm-6 col-xs-6">
                <div class="col-left">
                  <% sec[:rows].each do |row| -%>
                    <h4><%= row[:title] -%></h4>
                    <% row[:content].each do |item| -%>
                      <p><%= item -%></p>
                    <% end -%>
                  <% end -%>
                  <h4>相关产品</h4>
                  <p>
                    <% sec[:prolinks].each do |item| -%>
                      <% if item[:link] != "" -%>
                        <%= link_to item[:title], item[:link], target: "_blank", class: "product-item" -%>
                      <% else -%>
                        <span class="product-item"><%= item[:title] -%></span>
                      <% end -%>
                    <% end -%>
                  </p>
                </div>
              </div>
              <div class="col-md-4 col-sm-6 col-xs-6 col-right">
                <%= image_tag sec[:image], alt: sec[:title], width: "90%" -%>
                <%= link_to "立即购买", sec[:link], target: "_blank", class: "btn btn-lg btn-hollow m-r m-b-xs buy-btn" -%>
              </div>
            </div>
          </section>
        <% end -%>
      </div>
    </div>
  </div>
</div>

