<div class="jumbotron hero hero-qvm">
  <div class="container">
    <div class="middle-container">
      <div class="row">
        <div class="col-xs-10 col-sm-7">
          <h1><%= I18n.t("views.welcome.qvm.title") -%></h1>
          <p><%= I18n.t("views.welcome.qvm.describe") -%></p>
          <div class="actions <%= I18n.t("views.language") != "zh" ? "d-none" : "" -%>">
            <%= link_to "立即购买", "https://portal.qiniu.com/qvm/vm/instance/create", target: "_blank", class: "btn btn-lg btn-default m-r m-b-xs" -%>
            <%= link_to "控制台", "https://portal.qiniu.com/qvm", target: "_blank", class: "btn btn-lg btn-hollow m-r m-b-xs" -%>
          </div>
        </div>
        <div class="col-xs-5 hidden-xs">
          <div class="right-mask-banner">
            <%= image_tag "banner/banner-qvm-right-zh.png", alt: "qvm-right", width: "100%" -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%# nav tab %>
<div class="features features-less features-cases features-qvm-nav">
  <div class="container">
    <ul class="nav nav-tabs">
      <li><span>了解更多：</span></li>
      <% I18n.t("views.welcome.qvm.navs").each do |nav| -%>
        <li><%= link_to nav[:name], nav[:link], target: "_blank" -%></li>
      <% end -%>
    </ul>
  </div>
</div>

<%# advantage tab %>
<div class="features features-qvm-adva">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.qvm.advantage.title") -%></h2>
    </div>

    <div class="row">
      <% I18n.t("views.welcome.qvm.advantage.col").each do |col| -%>
        <div class="col-md-4 col-sm-6 col-xs-6">
          <div class="thumbnail">
            <%= image_tag col[:icon], alt: col[:title], width: 80 -%>
            <div class="caption">
              <h4><%= col[:title] -%></h4>
              <p><%= col[:desc] -%></p>
            </div>
          </div>
        </div>
      <% end -%>
    </div>

  </div>
</div>

<%# product tab %>
<div class="features features-less features-cases features-qvm-product qvm-product-title">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.qvm.product.title") -%></h2>
    </div>

    <ul class="navbar-wrapper-middle">
      <div class="row">
        <% I18n.t("views.welcome.qvm.product.icons").each do |icon| -%>
          <div class="icon-col col-xs-4">
            <li class="intLink">
              <%= image_tag icon[:icon], class: "normal-image", alt: icon[:title], width: 90 -%>
              <%= image_tag icon[:active], class: "active-image", alt: icon[:title], width: 90 -%>
              <p class="title"><%= link_to icon[:title], icon[:href], title: icon[:title] -%></p>
            </li>
          </div>
        <% end -%>
      </div>
    </ul>
  </div>
</div>

<%# 云主机 %>
