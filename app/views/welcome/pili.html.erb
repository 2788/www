<div class="jumbotron hero">
  <div class="container">
    <div class="middle-container">
      <div class="row">
        <div class="col-xs-8">
          <h2><%= I18n.t("views.welcome.pili.banner.title") %></h2>
          <p><%= I18n.t("views.welcome.pili.banner.desc") %></p>
          <div class="actions <%= I18n.t("views.language") != 'zh' ? 'd-none' : '' %>">
            <%= link_to "立即使用", "https://jinshuju.net/f/NhLqLx",target: "_blank", class: "btn btn-lg btn-default m-r m-b-xs" -%>
          </div>
        </div>
        <div class="col-xs-4 hidden-xs">
          <div class="right-mask-banner">
            <%= image_tag I18n.t("views.welcome.pili.banner.icon"), alt: "pili", width: '90%' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="features features-suspension">
  <div class="container">
    <div class="suspension">
      <div class="row">
        <% I18n.t("views.welcome.pili.specialty").each do |event| %>
          <div class="col-sm-3 col-xs-6 col-clear">
            <a href="javascript:;" class="suspension-item">
              <i class="icon diubao-icon"></i>
              <div class="desc">
                <p><%= event[:title] -%></p>
                <p><%= event[:desc] -%></p>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="features features-suspension-next">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.pili.scheme.title") -%></h2>
    </div>

    <div class="text-center">
      <%= image_tag I18n.t("views.welcome.pili.scheme.link"), width:"80%" %>
    </div>

  </div>
</div>

<div class="features feature-color">
  <div class="container">
    <div class="intro">
      <h3 class="title"><%= I18n.t("views.welcome.pili.serve.title") -%></h3>
      <p class="desc"><%= I18n.t("views.welcome.pili.serve.desc") -%></p>
    </div>

    <div class="row row-flex">      
      <% I18n.t("views.welcome.pili.serve.content").each do |event| %>
        <div class="col-sm-6">
          <div class="details-card">
            <div class="card-title">
              <h3 class="title play-icon"><%= event[:title] -%></h3>
              <p class="desc"><%= event[:desc] -%></p>
            </div>
            <div class="card-body">
              <% event[:children].each do |item| %>
                <h3 class="title"><%= item[:name] -%></h3>
                <p class="desc"><%= item[:desc] -%></p>
              <% end %>
            </div>
            <div class="action">
              <%= link_to event[:tagName], event[:link], class:"btn btn-primary" -%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="features features-bottom-line">
  <div class="container container-net-bg bottom-line">
    <div class="intro">
      <h3 class="title"><%= I18n.t("views.welcome.pili.network.title") -%></h3>
      <p class="desc"><%= I18n.t("views.welcome.pili.network.desc") -%></p>
    </div>

    <div class="row">
      <% I18n.t("views.welcome.pili.network.children").each do |item| %>
        <div class="col-sm-3 col-xs-6">
          <div class="thumbnail">
            <%= image_tag "pili/icon-anxushensuo.png", class:"media-object", alt: item[:name], width:"100" %>
            <div class="caption">
              <h4><%= item[:name] -%></h4>
              <p><%= item[:desc] -%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="features features-scene">
  <div class="container">
    <div class="intro">
      <h2 class="title"><%= I18n.t("views.welcome.pili.scene.title") %></h2>
      <p class="desc"><%= I18n.t("views.welcome.pili.scene.desc") %></p>
    </div>

    <div class="tabs">
      <ul class="nav nav-tabs nav-justified points-bar nav-short" role="tablist">
        <% I18n.t("views.welcome.pili.scene.middlebar").each do |col| %>
          <li class="<%= col[:class] %>"><%= link_to col[:name], col[:href], data:{ toggle: "tab" } -%></li>
        <% end %>
      </ul>
      <div class="tab-content bottom-line">
        <% I18n.t("views.welcome.pili.scene.sections").each do |sec| %>
          <section class="<%= sec[:class] %>" id="<%= sec[:id] -%>">
            <div class="media">
              <%= content_tag :div, image_tag(sec[:icon], alt: sec[:title], class: "media-object img-left"), class: "media-left" %>
              <div class="media-body">
                <p><%= sec[:desc] %></p>
                <p>
                  <%= sec[:link] %>
                  <% sec[:linkarr].each do |unit| %>
                    <%= link_to unit[:title], unit[:link], target: "_blank", class: "more m-r-sm" -%>
                  <% end %>
                </p>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</div>

