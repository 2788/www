<script type="text/javascript" src="http://v3.jiathis.com/code/jia.js" charset="utf-8"></script>

<div class="features features-blog">
  <div class="container">
    <div class="row row-clear">
      <div class="col-sm-8">
        <div class="blog-content">
          <div class="entry-header">
            <div class="entry-title">
              <a href="" class="title"><%= @archive[:title] %></a>
            </div>
            <div class="entry-meta">
              <span class="entry-meta-unit entry-author">
                <%= image_tag "blog/icon-zuozhe.png", class:"img", alt: "作者" -%>
                <%= link_to @archive[:author], archives_author_path(author: @archive[:author]) -%>
              </span>
              <span class="entry-meta-unit entry-date" %>>
                <%= image_tag "blog/icon-riqi.png", class:"img", alt: "日期" -%>
                <a href="javascript:;">
                  <%= @archive[:created_at].strftime("%Y-%m-%d %H:%M:%S") %>
                </a>
              </span>
              <span class="entry-meta-unit entry-utility-prep">
                <%= image_tag "blog/icon-fabu.png", class:"img", alt: "发布" -%>
                <span>发布在</span>
                <%= link_to Archive::CATEGORIES[@archive[:category]], archives_category_path(category: @archive[:category]) -%>
              </span>
              <!--
              <span class="entry-meta-unit page-views">
                <%= image_tag "blog/icon-liulanliang.png", class:"img", alt: "浏览量" -%>
                <span class="entry-utility-prep">
                  浏览量
                </span>
                <span class="entry-utility-prep">
                  2128
                </span>
              </span>
              -->
            </div>
          </div>
          <%= raw @archive[:content] %>
        </div>
        <!-- JiaThis Button BEGIN -->
        <div class="jiathis_style" style="padding-top:70px; padding-bottom:250px">
          <span class="jiathis_txt">分享到：</span>
          <a class="jiathis_button_cqq">QQ好友</a>
          <a class="jiathis_button_weixin">微信</a>
          <a class="jiathis_button_tsina">新浪微博</a>
          <a class="jiathis_button_tqq">腾讯微博</a>
          <a href="http://www.jiathis.com/share" class="jiathis jiathis_txt jiathis_separator jtico jtico_jiathis" target="_blank">更多</a>
          <a class="jiathis_counter_style"></a>
        </div>
        <!-- JiaThis Button END -->
      </div>
      <div class="col-sm-4">
        <%= render :partial => "sidebar" %>
      </div>
    </div>
  </div>
</div>