            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag(I18n.t("navbar.logo"), width: 100), I18n.t('views.language') == 'zh' ? '/' : '/en', class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-nav-mobile">
            <li class="dropdown" id="spaces-dropdown">
              <a href="#" class="dropdown-toggle dropdown-toggle-mobile" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= I18n.t("navbar.product") %></a>

              <ul class="dropdown-menu services-menu">
                <% I18n.t("services").each do |service| %>
                  <%= content_tag :li, service[:group], class: "menu-title hidden-xs" -%>

                  <% service[:list].each do |product| %>
                    <%= content_tag :li, class: I18n.t("views.language") != 'zh' && product[:name]=='kirk' ? 'd-none' : 'service' do -%>
                      <%= link_to(send("products_#{product[:name]}_path")) do -%>
                        <%= content_tag :h4, raw(product[:label]), class: product[:name] -%>
                        <%= content_tag :p, product[:desc], class: "hidden-xs" -%>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </ul>
            </li>

            <li class="dropdown" id="solution-dropdown">
              <a href="#" class="dropdown-toggle dropdown-toggle-mobile" id="solution-dropdown-title" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= I18n.t("navbar.solution") %></a>

              <ul class="dropdown-menu solutions-menu">
                <% I18n.t("solutions.arr1").each do |solution| %>
                  <%= content_tag :li, class: I18n.t("views.language") == 'en' ? 'd-none' : 'solution' do -%>
                    <%= link_to(send("products_#{solution[:name]}_path")) do -%>
                      <%= content_tag :h4, solution[:label], class: solution[:name]+" menu-title" -%>
                      <%= content_tag :p, solution[:desc], class: "hidden-xs" -%>
                    <% end %>
                  <% end %>
                <% end %>

                <% I18n.t("solutions.arr2").each do |solution| %>
                  <%= content_tag :li, class: "solution" do -%>
                    <%= link_to(solutions_path(anchor: solution[:name])) do -%>
                      <%= content_tag :h4, solution[:label], class: solution[:name]+" menu-title" -%>
                      <%= content_tag :p, solution[:desc], class: "hidden-xs" -%>
                    <% end %>
                  <% end %>
                <% end %>

                <li class="solution <%= I18n.t("views.language") == 'en' ? 'd-none' : '' %>">
                  <%= link_to products_pili_livequiz_path do -%>
                    <h4 class="quiz menu-title">直播竞答解决方案</h4>
                    <p class="hidden-xs">七牛云直播竞答解决方案是专为直播竞答产品打造的全球化直播流服务和端到端场景解决方案</p>
                  <% end %>
                </li>
              </ul>
            </li>
            <li class="<%= I18n.t("views.language") != 'zh' ? 'd-none' : '' %>"><%= link_to I18n.t("navbar.price"), prices_path -%></li>
            <li class="<%= I18n.t("views.language") != 'zh' ? 'd-none' : 'dropdown' %>" id="events-dropdown">
