    <div class="modal fade alert-modal-css form-wrapper" id="feedback-modal" tabindex="-1" role="dialog" aria-labelledby="feedback-modal-label" data-keyboard="false" data-backdrop="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="feedback-modal-label"><%= I18n.t("views.welcome.helper.title") %></h4>
          </div>
          <div class="modal-body">
            <div id="feedback-alert-success" class="alert alert-success" style="display: none;">
              <i class="glyphicon glyphicon-ok"></i> <%= I18n.t("views.welcome.helper.tips.success") %>
            </div>
            <div id="feedback-alert-error" class="alert alert-danger" style="display: none;">
              <i class="glyphicon glyphicon-remove"></i> <%= I18n.t("views.welcome.helper.tips.error") %>
            </div>
            <div class="tips text-center <%= I18n.t("views.language") != 'zh' ? 'd-none' : '' %>">
              此表单仅用于产品及服务售前咨询（您也可以拨打400-808-9176转2）<br />
              如有售后技术咨询，请<%= link_to "提交工单", "https://support.qiniu.com/tickets/category", class: "more underline" -%>
            </div>
            <div class="tips text-center <%= I18n.t("views.language") == 'zh' ? 'd-none' : '' %>">
              <%= I18n.t("views.welcome.helper.desc") %>
            </div>

            <%= form_for Feedback.new, url: {controller: "feedbacks", action: "create", t: SecureRandom.uuid}, :remote => true, html: {class: "form-horizontal", id: "feedback-form"} do |f| %>
              <%= f.hidden_field :referer, value: request.original_url -%>

              <div class="form-group">
                <label for="feedback-content" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.content") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.text_area :content, size: "x5", maxLength: 255, class: "form-control", id:"feedback-content", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.content") %></label>
                  </div>
                  <div class="maxLength-tips">
                    <label for="" class="maxLength-label"><%= I18n.t("views.welcome.helper.tips.tip") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-name" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.name") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.text_field :name, class:"form-control", id:"feedback-name", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.name") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-company" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.company") %></label>
                <div class="col-sm-10">
                  <%= f.text_field :company, class:"form-control", id:"feedback-company" %>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-city" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.country") %><small class="text-danger">*</small></label>
                <% if I18n.t("views.language") == 'zh' %>
                  <div class="col-sm-10" id="province_city" data-required="true">
                    <select name="feedback[province]" id="province" class="province form-control" data-value="北京" data-required="true"></select>
                  </div>
                <% else %>
                  <div class="col-sm-10" id="province_city">
                  <%= f.text_field :province, class:"form-control", id:"feedback-province", validate: true %>
                    <div class="div-error">
                      <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.phone") %></label>
                    </div>
                  </div>
                <% end %>

              </div>

              <div class="form-group">
                <label for="feedback-phone" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.phone") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.telephone_field :phone, class:"form-control", id:"feedback-phone", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.phone") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-email" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.email") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.text_field :email, type: "email", class:"form-control", id:"feedback-email", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.email") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group <%= I18n.t("views.language") == 'zh' ? 'd-none' : '' %>">
                <div class="col-sm-12 text-center tips">Email our Marketing Team：Marketing@Qiniu.com</div>
              </div>

              <div class="actions">
                <%= f.button I18n.t("views.welcome.helper.submit"), class:"btn btn-primary", id:"feedback-submit", disabled: true, data: {disable_with: I18n.t("views.welcome.helper.tips.submit")}  %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


