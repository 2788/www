                      <%= link_to(send("#{unit[:path]}_path")) do -%>
                        <%= content_tag :h4, raw(unit[:label]), class: unit[:name] -%>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </ul>
            </li>
            <li class="company-more"><%= link_to I18n.t("navbar.about"), company_path -%></li>
