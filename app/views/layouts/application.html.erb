                    <select name="feedback[province]" id="province" class="province form-control" data-value="北京" data-required="true"></select>
                  </div>
                <% else %>
                  <div class="col-sm-10" id="province_city">
                  <%= f.text_field :province, class:"form-control", id:"feedback-province", validate: true %>
