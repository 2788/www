              <%= I18n.t("views.welcome.helper.desc") %>
            </div>

            <%= form_for Feedback.new, url: {controller: "feedbacks", action: "create", t: SecureRandom.uuid}, :remote => true, html: {class: "form-horizontal", id: "feedback-form"} do |f| %>
              <%= f.hidden_field :referer, value: request.original_url -%>

              <div class="form-group">
                <label for="feedback-content" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.content") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.text_area :content, size: "x5", maxLength: 255, class: "form-control", id:"feedback-content", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.content") %></label>
                  </div>
                  <div class="maxLength-tips">
                    <label for="" class="maxLength-label"><%= I18n.t("views.welcome.helper.tips.tip") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-name" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.name") %><small class="text-danger">*</small></label>
                <div class="col-sm-10">
                  <%= f.text_field :name, class:"form-control", id:"feedback-name", validate: true %>
                  <div class="div-error">
                    <label for="" class="error-label"><%= I18n.t("views.welcome.helper.tips.name") %></label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-company" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.company") %></label>
                <div class="col-sm-10">
                  <%= f.text_field :company, class:"form-control", id:"feedback-company" %>
                </div>
              </div>

              <div class="form-group">
                <label for="feedback-city" class="col-sm-2 control-label"><%= I18n.t("views.welcome.helper.country") %><small class="text-danger">*</small></label>
                <% if I18n.t("views.language") == 'zh' %>
