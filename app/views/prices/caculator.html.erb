<div class="jumbotron hero hero-caculator">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <h2>价格计算器</h2>
      </div>
    </div>
  </div>
</div>

<div class="feature-price tabs">
  <div class="feature-price-nav">
    <div class="container">
      <ul class="nav navbar-nav" id="caculatorTabs">
        <li>
          <input type="checkbox" class="caculatorTabs" value="kodo" checked> 标准存储</input>
        </li>
        <li>
          <input type="checkbox" class="caculatorTabs" value="lowKodo" checked> 低频存储</input>
        </li>
        <li>
          <input type="checkbox" class="caculatorTabs" value="fusion" checked> 融合CDN</input>
        </li>
      </ul>
    </div>
  </div>

  <div class="features">
    <div class="container">
      <div class="row">
        <div class="col-sm-9">
          <div class="tab-content pricing-details">
            <section class="tab-pane active caculator-sec" id="tab-caculator-kodo">
              <dl>
                <dt>标准存储</dt>
                <dd>
                  <ul class="list-inline">
                    <li><span>存储区域</span></li>
                    <li>
                      <select name="kodo" id="kodo">
                        <option value="east">华东</option>
                        <option value="sourth">华南</option>
                        <option value="north">华北</option>
                      </select>
                    </li>
                  </ul>
                </dd>
                <dd>
                  <h5>存储空间</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
                <dd>
                  <h5>GET读请求数</h5>
                  <input type="range" value="10" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
                <dd>
                  <h5>PUT/DELET写请求数</h5>
                  <input type="range" value="40" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
              </dl>
            </section>

            <section class="tab-pane active caculator-sec" id="tab-caculator-lowKodo">
              <dl>
                <dt>低频存储</dt>
                <dd>
                  <ul class="list-inline">
                    <li><span>存储区域</span></li>
                    <li>
                      <select name="lowKodo" id="lowKodo">
                        <option value="east">华东</option>
                        <option value="sourth">华南</option>
                        <option value="north">华北</option>
                      </select>
                    </li>
                  </ul>
                </dd>
                <dd>
                  <h5>存储空间</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
                <dd>
                  <h5>API请求数 (GET/PUT)</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
                <dd>
                  <h5>存储类型转换</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
                <dd>
                  <h5>读取流量(HTTP)</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>万次/月</span>
                </dd>
              </dl>
            </section>

            <section class="tab-pane active caculator-sec-last" id="tab-caculator-fusion">
              <dl>
                <dt>融合CDN</dt>
                <dd>
                  <ul class="list-inline">
                    <li><span>存储区域</span></li>
                    <li>
                      <select name="fusion" id="fusion">
                        <option value="inland">国内</option>
                        <option value="outland">国外</option>
                      </select>
                    </li>
                  </ul>
                </dd>
                <dd>
                  <h5>HTTP下载流量</h5>
                  <input type="range" value="0" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>GB/月</span>
                </dd>
                <dd>
                  <h5>HTTPS下载流量</h5>
                  <input type="range" value="10" min="0" max="1000" step="1" class="input-range">
                  <input type="number" class="input-num">
                  <span>GB/月</span>
                </dd>
              </dl>
            </section>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="pricing-info">
            <dl>
              <dt>价格预算清单</dt>
              <dd id="pricing-info-kodo">
                <ul class="pricing-info-details">
                  <li>标准存储</li>
                  <li class="price" id="kodo-price">￥19089</li>
                </ul>
                <p id="kodo-details">xxxGB/月，xxx万次读请求，xxx次万次写请求</p>
              </dd>
              <dd id="pricing-info-lowKodo">
                <ul class="pricing-info-details">
                  <li>低频存储</li>
                  <li class="price" id="lowKodo-price">￥19089</li>
                </ul>
                <p id="lowKodo-details">xxxGB/月，xxx万次读请求，xxx次万次写请求</p>
              </dd>
              <dd id="pricing-info-fusion">
                <ul class="pricing-info-details">
                  <li>融合CDN</li>
                  <li class="price" id="fusion-price">￥19089</li>
                </ul>
                <p id="fusion-details">HTTP国内下载流量xxxGB, HTTP海外下载流量xxxGB， HTTPS国内下载流量xxxGB， HTTS海外下载流量xxxGB</p>
              </dd>
              <dd class="sum">
                <%= link_to '合计： ￥19089 / 月', "", class: "sum" %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>